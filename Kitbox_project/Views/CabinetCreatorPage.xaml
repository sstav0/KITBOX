<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Kitbox_project.ViewModels"
             x:Class="Kitbox_project.Views.CabinetCreatorPage"
             x:DataType="local:CabinetViewModel">

    <ScrollView>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="550"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="DarkBlue" Grid.Row="0" Grid.Column="1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Picker x:Name="LengthPicker" Title="Select Length" HorizontalOptions="Center"
                            Grid.Column="0"
                            TitleColor="white" BackgroundColor="Gray"/>

                    <Picker x:Name="DepthPicker" Title="Select Depth" HorizontalOptions="Center"
                            Grid.Column="1"
                            TitleColor="white" BackgroundColor="Gray"/>
                
                </Grid>

            </Frame>

            <Frame BackgroundColor="DarkBlue"  Grid.Row="1" Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="75"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125"/>
                        <ColumnDefinition Width="125"/>
                        <ColumnDefinition Width="125"/>
                        <ColumnDefinition Width="125"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="New Locker" x:Name="LockerNumber" HorizontalOptions="Center" 
                           Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0"
                           TextColor="white" FontSize="Medium"/>

                    <Label Text="Door" Grid.Row="1" Grid.Column="0" HorizontalOptions="End" 
                           TextColor="white"
                           VerticalOptions="Center"/>

                    <CheckBox x:Name="DoorCheckbox" Grid.Row="1" Grid.Column="1" 
                              VerticalOptions="Start" HorizontalOptions="Center"/>

                    <Label Text="Glass" Grid.Row="1" Grid.Column="2" HorizontalOptions="End" 
                           TextColor="white"
                           VerticalOptions="Center"/>

                    <CheckBox x:Name="GlassCheckbox" Grid.Row="1" Grid.Column="3" 
                              VerticalOptions="Start" HorizontalOptions="Center"/>

                    <Picker x:Name="DoorColorPicker" Title="Select the color of the door" HorizontalOptions="Center" 
                            Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0"
                            TextColor="white" TitleColor="White" BackgroundColor="Gray"/>

                    <Picker x:Name="HeightPicker" Title="Select the height of the locker" HorizontalOptions="Center" 
                            Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="2"
                            TextColor="white" TitleColor="White" BackgroundColor="Gray"/>

                    <Picker x:Name="LockerColorPicker" Title="Select the color of the panels" HorizontalOptions="Center" 
                            Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0"
                           TextColor="white" TitleColor="White" BackgroundColor="Gray"/>

                    <Button x:Name="AddLockerButton" Clicked="OnAddLockerButtonClicked" Text="ADD"
                            Grid.Row="3" Grid.ColumnSpan="2"  Grid.Column="2"
                            TextColor="White" BackgroundColor="Gray"/>

                </Grid>

            </Frame>
            
            <ListView ItemsSource="{Binding Lockers}" Grid.RowSpan="3" Grid.Row="0" Grid.Column="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BorderColor="Gray">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding .}" Grid.Row="0" Grid.Column="0"/> <!-- Binding LockerName -->
                                    <Label Text="Copy" Grid.Row="0" Grid.Column="1"/>
                                    <Label Text="Update" Grid.Row="0" Grid.Column="2"/>
                                    <Label Text="X" Grid.Row="0" Grid.Column="3"/>
                                    <Label Text="/\" Grid.Row="0" Grid.Column="3"/>

                                    <Label Text="Panel Color :" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0"/>
                                    <Label Text="{Binding .}" Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="2"/> <!-- Binding PanelColor -->
                                    <Label Text="Locker Height :" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0"/>
                                    <Label Text="{Binding .}" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="2"/> <!-- Binding Height -->
                                    <Label Text="Door Material :" Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0"/>
                                    <Label Text="{Binding .}" Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="2"/> <!-- Binding DoorMaterial -->
                                    <Label Text="Door Color :" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0"/>
                                    <Label Text="{Binding .}" Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="2"/> <!-- Binding DoorColor -->

                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
        
    </ScrollView>
    
</ContentPage>
