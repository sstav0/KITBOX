<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Kitbox_project.Views.LockerCreatorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Locker Creator">

    <ScrollView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="1"
                FontSize="26"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Welcome to the Locker Creator !" />
            <Picker
                x:Name="doorPicker"
                Title="Select door color"
                Grid.Column="2" />
            <CheckBox
                x:Name="addDoor"
                Grid.Column="0"
                CheckedChanged="OnAddDoorClicked" />
            <CheckBox
                x:Name="glassDoor"
                Grid.Column="1"
                CheckedChanged="OnGlassDoorClicked" />

        </Grid>
    </ScrollView>
</ContentPage>