<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kitbox_project.Views.SecretaryPricePage"
             Title="Secretary Price">

    <Grid Margin="5" RowSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Text="Suppliers' Prices" FontSize="Header" FontAttributes="Bold"
               HorizontalOptions="Start" VerticalOptions="Center"
               Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="0"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Supplier Name" FontSize="Title" FontAttributes="Bold"
                   HorizontalOptions="Center" Grid.Column="1"/>

            <Label Text="Part Name" FontSize="Title" FontAttributes="Bold"
                   HorizontalOptions="Center" Grid.Column="2"/>

            <Label Text="Price" FontSize="Title" FontAttributes="Bold"
                   HorizontalOptions="Center" Grid.Column="3"/>

        </Grid>

        <ScrollView Grid.Row="2" Grid.ColumnSpan="3">
            <ListView x:Name="ListSuppliers">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Border Stroke="Black" BackgroundColor="LightGrey" Padding="5">
                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding SupplierName}" FontSize="Medium"
                                           HorizontalOptions="Center" Grid.Column="1"/>

                                    <Label Text="{Binding PartName}" FontSize="Medium"
                                           HorizontalOptions="Center" Grid.Column="1"/>

                                    <Label Text="{Binding SupplierPrice}" FontSize="Medium"
                                           HorizontalOptions="Center" Grid.Column="3"/>

                                    <Entry Placeholder="Enter the new price here" FontSize="Medium"
                                           HorizontalOptions="Center" Grid.Column="4"/>

                                    <Button Text="Save new Price" Clicked="OnSavePriceClicked" FontSize="Medium"
                                            HorizontalOptions="Center" Grid.Column="5"/>
                                    
                                </Grid>
                            </Border>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

    </Grid>
</ContentPage>