<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kitbox_project.LoginViews.StorekeeperLoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kitbox_project"
    xmlns:views="clr-namespace:Kitbox_project.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
<TabBar>

         <ShellContent
            Title="Stock"
            ContentTemplate="{DataTemplate views:StockPage}"
            Route="StockPage"/>
        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate views:OrdersPage}"
            Route="OrdersPage"/>
        <ShellContent
            Title="Cabinet Creator"
            ContentTemplate="{DataTemplate views:CabinetCreatorPage}"
            Route="CabinetCreatorPage"/>
         <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="HomePage"/> 
        <ShellContent
            Title="Logout"
            ContentTemplate="{DataTemplate views:LogoutPage}"
            Route="Logout"/>         
    </TabBar>

</Shell>