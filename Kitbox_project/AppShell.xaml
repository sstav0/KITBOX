<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kitbox_project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kitbox_project"
     xmlns:views="clr-namespace:Kitbox_project.Views"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="Basket"
            ContentTemplate="{DataTemplate views:BasketPage}"
            Route="BasketPage" />

    </TabBar>

    <ShellContent
    Title="Cabinet Creator"
    ContentTemplate="{DataTemplate views:CabinetCreatorPage}"
    Route="CabinetCreatorPage" />

    <ShellContent
    Title="Locker Creator"
    ContentTemplate="{DataTemplate views:LockerCreatorPage}"
    Route="LockerCreatorPage" />


</Shell>
